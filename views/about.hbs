<section class="about-me">
    <h2 class="display-4 text-center mb-4 border-bottom pb-2">Sobre MÃ­</h2>
    
    <div class="card shadow-lg p-4 mb-5">
        <div class="card-body">
            <p class="lead">{{historia}}</p>
        </div>
    </div>

    <h3 class="display-5 text-center mb-4 text-secondary">Experiencia Laboral</h3>
    
    <div class="accordion" id="accordionExperiencia">
        
        {{#each experiencias}}
        <div class="accordion-item shadow-sm mb-3">
            <h2 class="accordion-header" id="heading{{id}}">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{id}}" aria-expanded="false" aria-controls="collapse{{id}}">
                    <div class="d-flex w-100 justify-content-between align-items-center">
                        <div>
                            <strong class="d-block text-primary">{{cargo}}</strong>
                            <span class="text-muted small">{{empresa}}</span>
                        </div>
                        <span class="badge bg-secondary text-white">{{periodo}}</span>
                    </div>
                </button>
            </h2>
            <div id="collapse{{id}}" class="accordion-collapse collapse" aria-labelledby="heading{{id}}" data-bs-parent="#accordionExperiencia">
                <div class="accordion-body">
                    
                    <p class="fw-bold border-bottom pb-2 mb-3">Principales Logros y Responsabilidades:</p>
                    
                    <ul class="list-group list-group-flush">
                        {{#each logros}}
                        <li class="list-group-item px-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i> {{this}} 
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        {{/each}}
        
    </div>
</section>